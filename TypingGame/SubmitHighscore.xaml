<UserControl x:Class="TypingGame.SubmitHighscore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TypingGame"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800">
    <Grid Name="grid" Background="#FF0F0F0F">
        <Label Content="Submit your highscore" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Foreground="MintCream" FontSize="36" FontWeight="Thin"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="23" Margin="338,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Enter your name:" HorizontalAlignment="Left" Margin="213,132,0,0" VerticalAlignment="Top" Foreground="MintCream"/>
        <Button x:Name="Submit" Content="Submit" HorizontalAlignment="Center" Margin="0,187,0,0" VerticalAlignment="Top" Width="75" Click="Submit_Click"/>
        <Label x:Name="Score" Content="You scored: 999" HorizontalAlignment="Center" Margin="0,83,0,0" VerticalAlignment="Top" Foreground="Yellow" FontSize="22"/>

    </Grid>
</UserControl>
